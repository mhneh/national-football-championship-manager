<style>
  .d-flex { display: flex !important; } .justify-content-end { justify-content:
  flex-end !important; } .mx-5 { margin-right: 3rem !important; margin-left:
  3rem !important; } .mt-4 { margin-top: 1.5rem !important; } .rounded-top {
  border-top-left-radius: var(--bs-border-radius) !important;
  border-top-right-radius: var(--bs-border-radius) !important; } .text-center {
  text-align: center !important; } --bs-gutter-x: 1.5rem; .row { --bs-gutter-x:
  1.5rem; --bs-gutter-y: 0; display: flex; flex-wrap: wrap; margin-top: calc(-1
  * var(--bs-gutter-y)); margin-right: calc(-0.5 * var(--bs-gutter-x));
  margin-left: calc(-0.5 * var(--bs-gutter-x)); } .col { flex: 1 0 0%; }

  .update-item {
    margin-left: 3px;
    padding: 0 10px;
  }
  .confirm{
    margin-top : 10px;
    margin-left: 12px;
  }

  #cancel{
    padding: 5px 10px;
  }
</style>
<div class="main-content">
    <div class="background-blur">
        <div class="main__container-item row mt-4 d-flex">
            <div class="team-img col col-mobile-3">
                <img src="{{team.logo}}" alt={{team.name}} class="team-img__img" />
                <div class="team-img__name text-center">{{team.name}}</div>
                <div class="team-img__stadium text-center">SÂN NHÀ: {{team.stadium}}</div>
            </div>
            <div class="col col-mobile-16 grid margin-auto">
                <div class="rating-player table font-size-16">
                    <header class="rating-player__header table-header rounded-top">
                        <ul class="rating-player__header-list row no-gutters font-size-16">
                            <li class="rating-player__header-item col col-mobile-1">
                                <div class="rating-play__header-item-title">STT</div>
                                <div class="rating-player__header-item-control ps-2">
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-up"></i>
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-down"></i>
                                </div>
                            </li>
                            <li class="rating-player__header-item col col-mobile-3">
                                <div class="rating-play__header-item-title">
                                    Tên cầu thủ
                                </div>
                                <div class="rating-player__header-item-control">
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-up"></i>
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-down"></i>
                                </div>
                            </li>
                            <li class="rating-player__header-item col col-mobile-3">
                                <div class="rating-play__header-item-title">
                                    Ngày sinh
                                </div>
                                <div class="rating-player__header-item-control">
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-up"></i>
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-down"></i>
                                </div>
                            </li>
                            <li class="rating-player__header-item col col-mobile-2">
                                <div class="rating-play__header-item-title">Vị trí</div>
                                <div class="rating-player__header-item-control">
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-up"></i>
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-down"></i>
                                </div>
                            </li>
                            <li class="rating-player__header-item col col-mobile-2">
                                <div class="rating-play__header-item-title">
                                    Loại cầu thủ
                                </div>
                                <div class="rating-player__header-item-control">
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-up"></i>
                                    <i class="rating-player__header-item-control-icon fa-solid fa-angle-down"></i>
                                </div>
                            </li>
                        </ul>
                    </header>
                    <div class="rating-player__content">
                        {{#each players}}
                        <ul class="rating-player__content-list row table-row no-gutters">
                            <li class="rating-player__content-item col col-mobile-1">
                                {{this.id}}
                            </li>
                            <li class="rating-player__content-item col col-mobile-3">
                                {{this.name}}
                            </li>
                            <li class="rating-player__content-item col col-mobile-3">
                                {{this.birthday}}
                            </li>
                            <li class="rating-player__content-item col col-mobile-2">
                                {{this.role}}
                            </li>
                            <li class="rating-player__content-item col col-mobile-2">
                                {{this.type}}
                            </li>
                        </ul>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="pagination left">
            <ul class="pagination__list">
                <li class="pagination__item">
                    <a class="pagination__item-link"
                        href="/tournaments/registration_file/teaminfo?teamid={{team.id}}&&page={{previousPage}}">
                        <i class="fa-solid fa-angle-left"></i></a>
                </li>
                <li class="pagination__item">
                    <a class="pagination__item-link pagination__item-link--active"
                        href="/tournaments/registration_file/teaminfo?teamid={{team.id}}&&page={{page}}">
                        {{page}}
                    </a>
                </li>
                <li class="pagination__item">
                    <a class="pagination__item-link"
                        href="/tournaments/registration_file/teaminfo?teamid={{team.id}}&&page={{nextPage}}">
                        <i class="fa-solid fa-angle-right"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>